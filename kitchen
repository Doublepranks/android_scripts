#!/bin/bash
# Written by Sean Donovan (swordrune10)
clear

if [ $EXIT ]; then
	exit 0
fi

export LOCAL=$( pwd )

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Main Menu:"
echo "  1. Setup Kitchen"
echo "  2. Update Kitchen"
echo "  3. Run Kitchen"
echo "  4. Fix Kitchen"
echo "  5. Exit"
echo ""
echo "Which one would you like to do?"
read answer

if [ "$answer" == "" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	echo "Press Enter to continue"
	read done

	$LOCAL/kitchen
	exit 0
fi

if ( grep [A-Za-z]); then
	echo ""
	echo "You did not make a proper selection, try again!"
	echo "Press Enter to continue"
	read done

	$LOCAL/kitchen
	exit 0
fi

if [ $answer -gt "10" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	echo "Press Enter to continue"
	read done

	$LOCAL/kitchen
	exit 0
fi

if [ $answer == "1" ]; then
	./kitchenarranger
	cd $LOCAL
	./kitchen
	exit 0
fi

if [ $answer == "2" ]; then
	./kitchenupdater
	cd $LOCAL
	./kitchen
	exit 0
fi

if [ $answer == "3" ]; then
	./kitchenbuilder
	cd $LOCAL
	./kitchen
	exit 0
fi

if [ $answer == "4" ]; then
	./kitchencleaner
	cd $LOCAL
	./kitchen
	exit 0
fi

if [ $answer == "6" ] || [ $answer == "7" ] || [ $answer == "8" ] || [ $answer == "9" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	echo "Press Enter to continue"
	read done

	$LOCAL/kitchen
	exit 0
fi

if [ $answer == "10" ]; then
	echo "You seem bored.. wanna watch a movie?"
	read nothing
	if [ $nothing == "no" ] || [ $nothing == "n" ]; then
		echo "tough!"
	fi
	telnet towel.blinkenlights.nl
fi
