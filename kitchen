#!/bin/bash
# Written by Sean Donovan (swordrune10)
clear

cd $LOCAL

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Main Menu:"
echo "  1. Setup Kitchen"
echo "  2. Update Kitchen"
echo "  3. Run Kitchen"
echo "  4. Exit"
echo ""
echo "Which one would you like to do?"

read answer

if [ $answer == "1" ]; then
	./setupkitchen
	./kitchen
	exit 0
fi

if [ $answer == "2" ]; then
	./updatekitchen
	./kitchen
	exit 0
fi

if [ $answer == "3" ]; then
	./kitchenbuilder
	./kitchen
	exit 0
fi

if [ $answer == "5" ]; then
	./kitchencleaner
	./kitchen
	exit 0
fi

if [ $answer == "10" ]; then
	echo "You seem bored.. wanna watch a movie?"
	read nothing
	if [ $nothing == "no" ] || [ $nothing == "n" ]; then
		echo "tough!"
	fi
	telnet towel.blinkenlights.nl
fi
