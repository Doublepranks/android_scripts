#!/bin/bash
# Written by Sean Donovan (swordrune10)

if [ ! "$INIT" ]; then
	cd $(dirname $0)
	export SCRIPT=$(echo "builddevice")
	../headerfile
	exit 0
fi

repomenu () {
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "$devicefullname is selected to be built!"
echo ""
echo "Which android repository are we building from today?"

echo "  1. Android Open Kang Project"
echo "  2. Android Open Source Project"
echo "  3. Codename Android"
echo "  4. Cyanogenmod 9"
echo "  5. Cyanogenmod 10"
echo "  6. Cyanogenmod 10.2"
echo "  7. Evervolv"
echo "  8. ParanoidAndroid"
echo "  9. Rooted & Busyboxed AOSP"
echo "  10. Go Back"

read version

if [ ! "$version" ] || ( echo $version | grep -q [A-Za-z] ) || [ $version -gt "10" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	menu
fi

if [ $version == "1" ]; then
	export SCRIPT_REPO=$(echo "aokp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "2" ]; then
	export SCRIPT_REPO=$(echo "aosp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "3" ]; then
	export SCRIPT_REPO=$(echo "cna")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "4" ]; then
	export SCRIPT_REPO=$(echo "evervolv")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "5" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "ics")
fi

if [ $version == "6" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "7" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "10.2")
fi

if [ $version == "8" ]; then
	export SCRIPT_REPO=$(echo "paranoid")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "9" ]; then
	export SCRIPT_REPO=$(echo "raosp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "10" ]; then
	echo ""
	read -p "Returning to Build Menu, Press Enter to continue: " done
	exit 0
fi

if ( ! find $REPOS/$SCRIPT_REPO-$REPO_PLATFORM -maxdepth 1 &> /dev/null ); then
	echo ""
	echo "The selected android repository is not setup!"
	read -p "Press Enter to continue: " done
	repomenu
fi

devicecheck

devicecheck(){

if [ $SCRIPT_REPO == "aokp" ]; then
	if ( ! sed -e 's/.*aokp_//g' \
	-e 's/-userdebug//' \
	$REPOS/aokp-jb/vendor/aokp/vendorsetup.sh | grep -q $SCRIPT_DEVICE ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "aosp" ]; then
	if ( ! sed -e 's/.*aosp_//g' \
	-e 's/-userdebug//' \
	$REPOS/aosp-jb/device/*/$SCRIPT_DEVICE/vendorsetup.sh | grep -q $SCRIPT_DEVICE ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi	
fi

if [ $SCRIPT_REPO == "cna" ]; then
	if ( ! sed -e 's/.*cna_//g' \
	-e 's/-userdebug//' \
	$REPOS/cna-jb/vendor/cna/vendorsetup.sh | grep -q $SCRIPT_DEVICE ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi	
fi

if [ $SCRIPT_REPO == "cm" ]; then
	if ( ! cat $LOCAL/config/cm-master-list | grep -q $SCRIPT_DEVICE ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "evervolv" ]; then
	if ( ! sed -e 's/.*ev_//g' \
	-e 's/-userdebug//' \
	$REPOS/ev-jb/vendor/ev/vendorsetup.sh | grep -q $SCRIPT_DEVICE ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "paranoid" ]; then
	if ( ! sed -e 's/.*pa_//g' \
	-e 's/-userdebug//' \
	$REPOS/paranoid-jb/vendor/pa/vendorsetup.sh | grep -q $SCRIPT_DEVICE ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "raosp" ]; then
	if ( ! sed -e 's/.*aosp_//g' \
	-e 's/-userdebug//' \
	$REPOS/raosp-jb/device/*/$SCRIPT_DEVICE/vendorsetup.sh | grep -q $SCRIPT_DEVICE ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

buildandro

exit 0
}

nexus4menu(){
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Today's Menu:"
echo " 1. Build GSM Nexus 4"
echo " 2. Go Back"
echo ""
echo "Which one would you like to do?"
read buildnexus4

if [ ! "$buildnexus4" ] || ( echo $buildnexus4 | grep -q [A-Za-z] ) || [ $buildnexus4 -gt "2" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	nexus4menu
fi

if [ $buildnexus4 == "1" ]; then
	export SCRIPT_DEVICE=$(echo "mako")
	devicefullname=$(echo "GSM Nexus 4")
	repomenu
fi

if [ $buildnexus4 == "2" ]; then
	echo ""
	read -p "Press Enter to go back: " done
	exit 0
fi
nexus4menu
}

gnexusmenu(){
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Today's Menu:"
echo "  1. Build Verizon Galaxy Nexus"
echo "  2. Build GSM Galaxy Nexus"
echo "  3. Build Sprint Galaxy Nexus"
echo "  4. Build all above!"
echo "  5. Go Back"
echo ""
echo "Which one would you like to do?"
read buildgnexus

if [ ! "$buildgnexus" ] || ( echo $buildgnexus | grep -q [A-Za-z] ) || [ $buildgnexus -gt "5" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	gnexusmenu
fi

if [ $buildgnexus == "1" ]; then
	export SCRIPT_DEVICE=$(echo "toro")
	devicefullname=$(echo "Verizon Galaxy Nexus")
	repomenu
fi

if [ $buildgnexus == "2" ]; then
	export SCRIPT_DEVICE=$(echo "maguro")
	devicefullname=$(echo "GSM Galaxy Nexus")
	repomenu
fi

if [ $buildgnexus == "3" ]; then
	export SCRIPT_DEVICE=$(echo "toroplus")
	devicefullname=$(echo "Sprint Galaxy Nexus")
	repomenu
fi

if [ $buildgnexus == "4" ]; then
	export SCRIPT_DEVICE=$(echo "toro")
	devicefullname=$(echo "All Galaxy Nexi")
	repomenu

	export SCRIPT_DEVICE=$(echo "maguro")
	export SLOPPYSECONDS=true
	devicecheck

	export SCRIPT_DEVICE=$(echo "toroplus")
	export SLOPPYSECONDS=true
	devicecheck
fi

if [ $buildgnexus == "5" ]; then
	echo ""
	read -p "Press Enter to go back: " done
	exit 0
fi
gnexusmenu
}


