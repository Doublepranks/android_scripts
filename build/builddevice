#!/bin/bash
# Written by Sean Donovan (swordrune10)

if [ ! "$INIT" ]; then
	cd $(dirname $0)
	export SCRIPT=$(echo "builddevice")
	../headerfile
	exit 0
fi

repomenu () {
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "$devicefullname is selected to be built!"
echo ""
echo "Which android repository are we building from today?"

if [ "$buildallthethings" ]; then
	echo "  1. Android Open Kang Project"
	echo "  2. BAMF Paradigm"
	echo "  3. Codename Android"
	echo "  4. Cyanogenmod 10"
	echo "  5. ParanoidAndroid"
	echo "  6. Rooted & Busyboxed AOSP"
	echo "  7. Go Back"
fi

if [ "$nexus7inbuild" ]; then
	echo "  1. Android Open Kang Project"
	echo "  2. Android Open Source Project"
	echo "  3. BAMF Paradigm"
	echo "  4. Codename Android"
	echo "  5. Cyanogenmod 10"
	echo "  6. ParanoidAndroid"
	echo "  7. Rooted & Busyboxed AOSP"
	echo "  8. Go Back"
fi

if [ "$toroplusinbuild" ]; then
	echo "  1. Android Open Kang Project"
	echo "  2. BAMF Paradigm"
	echo "  3. Codename Android"
	echo "  4. Cyanogenmod 9"
	echo "  5. Cyanogenmod 10"
	echo "  6. ParanoidAndroid"
	echo "  7. Rooted & Busyboxed AOSP"
	echo "  8. Team Gummy"
	echo "  9. Go Back"
fi

if [ ! "$buildallthethings" ] && [ ! "$nexus7inbuild" ] && [ ! "$toroplusinbuild" ]; then
	echo "  1. Android Open Kang Project"
	echo "  2. Android Open Source Project"
	echo "  3. BAMF Paradigm"
	echo "  4. Codename Android"
	echo "  5. Cyanogenmod 9"
	echo "  6. Cyanogenmod 10"
	echo "  7. ParanoidAndroid"
	echo "  8. Rooted & Busyboxed AOSP"
	echo "  9. Team Gummy"
	echo "  10. Go Back"
fi

read version

if [ ! "$version" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	repomenu
fi

if ( echo $version | grep -q [A-Za-z] ); then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	repomenu
fi

if [ "$buildallthethings" ]; then
	if [ $version -gt "7" ]; then
		echo ""
		echo "You did not make a proper selection, try again!"
		read -p "Press Enter to continue: " done
		repomenu
	fi
fi

if [ "$nexus7inbuild" ]; then
	if [ $version -gt "8" ]; then
		echo ""
		echo "You did not make a proper selection, try again!"
		read -p "Press Enter to continue: " done
		repomenu
	fi
fi

if [ "$toroplusinbuild" ]; then
	if [ $version -gt "9" ]; then
		echo ""
		echo "You did not make a proper selection, try again!"
		read -p "Press Enter to continue: " done
		repomenu
	fi
fi

if [ ! "$buildallthethings" ] && [ ! "$nexus7inbuild" ] && [ ! "$toroplusinbuild" ]; then
	if [ $version -gt "10" ]; then
		echo ""
		echo "You did not make a proper selection, try again!"
		read -p "Press Enter to continue: " done
		repomenu
	fi
fi

if [ "$buildallthethings" ]; then
	if [ $version == "1" ]; then
		export SCRIPT_REPO=$(echo "aokp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "2" ]; then
		export SCRIPT_REPO=$(echo "bamf")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "3" ]; then
		export SCRIPT_REPO=$(echo "cna")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "4" ]; then
		export SCRIPT_REPO=$(echo "cm")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "5" ]; then
		export SCRIPT_REPO=$(echo "paranoid")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "6" ]; then
		export SCRIPT_REPO=$(echo "raosp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "7" ]; then
		echo ""
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ "$nexus7inbuild" ]; then
	if [ $version == "1" ]; then
		export SCRIPT_REPO=$(echo "aokp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "2" ]; then
		export SCRIPT_REPO=$(echo "aosp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "3" ]; then
		export SCRIPT_REPO=$(echo "bamf")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "4" ]; then
		export SCRIPT_REPO=$(echo "cna")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "5" ]; then
		export SCRIPT_REPO=$(echo "cm")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "6" ]; then
		export SCRIPT_REPO=$(echo "paranoid")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "7" ]; then
		export SCRIPT_REPO=$(echo "raosp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "8" ]; then
		echo ""
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ "$toroplusinbuild" ]; then
	if [ $version == "1" ]; then
		export SCRIPT_REPO=$(echo "aokp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "2" ]; then
		export SCRIPT_REPO=$(echo "bamf")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "2" ]; then
		export SCRIPT_REPO=$(echo "cna")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "3" ]; then
		export SCRIPT_REPO=$(echo "cm")
		export REPO_PLATFORM=$(echo "ics")
	fi

	if [ $version == "4" ]; then
		export SCRIPT_REPO=$(echo "cm")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "5" ]; then
		export SCRIPT_REPO=$(echo "paranoid")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "6" ]; then
		export SCRIPT_REPO=$(echo "raosp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "8" ]; then
		export SCRIPT_REPO=$(echo "gummy")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "9" ]; then
		echo ""
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ ! "$buildallthethings" ] && [ ! "$nexus7inbuild" ] && [ ! "$toroplusinbuild" ]; then
	if [ $version == "1" ]; then
		export SCRIPT_REPO=$(echo "aokp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "2" ]; then
		export SCRIPT_REPO=$(echo "aosp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "3" ]; then
		export SCRIPT_REPO=$(echo "bamf")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "4" ]; then
		export SCRIPT_REPO=$(echo "cna")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "5" ]; then
		export SCRIPT_REPO=$(echo "cm")
		export REPO_PLATFORM=$(echo "ics")
	fi

	if [ $version == "6" ]; then
		export SCRIPT_REPO=$(echo "cm")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "7" ]; then
		export SCRIPT_REPO=$(echo "paranoid")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "8" ]; then
		export SCRIPT_REPO=$(echo "raosp")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "9" ]; then
		export SCRIPT_REPO=$(echo "gummy")
		export REPO_PLATFORM=$(echo "jb")
	fi

	if [ $version == "10" ]; then
		echo ""
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if ( ! find $REPOS/$SCRIPT_REPO-$REPO_PLATFORM &> /dev/null ); then
	echo ""
	echo "The selected android repository is not setup!"
	read -p "Press Enter to continue: " done
	repomenu
fi

clear

devicecount=""

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
while true; do
	let devicecount=$devicecount+1

	if [ $devicecount == "2" ]; then
		export SLOPPYSECONDS=true
	fi

	if ( echo "${scriptdevice[$devicecount]}" | grep -q "EOF" ); then
		export SLOPPYSECONDS=""
		break
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	export SCRIPT_DEVICE="${scriptdevice[$devicecount]}"
	buildandro
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
done
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
echo "Finished!"
exit 0
}

gnexusmenu(){
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Today's Menu:"
echo "  1. Build Verizon Galaxy Nexus"
echo "  2. Build GSM Galaxy Nexus"
echo "  3. Build Sprint Galaxy Nexus"
echo "  4. Build all above!"
echo "  5. Go Back"
echo ""
echo "Which one would you like to do?"
read buildgnexus

if [ ! "$buildgnexus" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
fi

if ( echo $buildgnexus | grep -q [A-Za-z] ); then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
fi

if [ $buildgnexus -gt "5" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
fi

if [ $buildgnexus == "1" ]; then
	scriptdevice[1]=$(echo "toro")
	scriptdevice[2]=$(echo "EOF")
	devicefullname=$(echo "Verizon Galaxy Nexus")
	repomenu
fi

if [ $buildgnexus == "2" ]; then
	scriptdevice[1]=$(echo "maguro")
	scriptdevice[2]=$(echo "EOF")
	devicefullname=$(echo "GSM Galaxy Nexus")
	repomenu
fi

if [ $buildgnexus == "3" ]; then
	scriptdevice[1]=$(echo "toroplus")
	scriptdevice[2]=$(echo "EOF")
	devicefullname=$(echo "Sprint Galaxy Nexus")
	toroplusinbuild=true
	repomenu
fi

if [ $buildgnexus == "4" ]; then
	scriptdevice[1]=$(echo "toro")
	scriptdevice[2]=$(echo "maguro")
	scriptdevice[3]=$(echo "toroplus")
	scriptdevice[4]=$(echo "EOF")
	devicefullname=$(echo "All Galaxy Nexi")
	toroplusinbuild=true
	repomenu
fi

if [ $buildgnexus == "5" ]; then
	echo ""
	read -p "Press Enter to go back: " done
	exit 0
fi
gnexusmenu
}


nexussmenu(){
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
