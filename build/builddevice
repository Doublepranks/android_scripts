allmenu(){
scriptdevice[1]=$(echo "toro")
scriptdevice[2]=$(echo "maguro")
scriptdevice[3]=$(echo "toroplus")
scriptdevice[4]=$(echo "crespo")
scriptdevice[5]=$(echo "crespo4g")
scriptdevice[6]=$(echo "grouper")
scriptdevice[7]=$(echo "tilapia")
scriptdevice[8]=$(echo "manta")
scriptdevice[9]=$(echo "stingray")
scriptdevice[10]=$(echo "wingray")
scriptdevice[11]=$(echo "EOF")
devicefullname=$(echo "All Nexus Devices")
repomenu
}

if [ ! "$builddevicemenu" ]; then
	buildmenu
else
	$builddevicemenu
fi
