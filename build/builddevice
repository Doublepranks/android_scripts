#!/bin/bash
# Written by Sean Donovan (swordrune10)

if [ ! "$INIT" ]; then
	cd $(dirname $0)
	export SCRIPT=$(echo "builddevice")
	../headerfile
	exit 0
fi

repomenu () {
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "$devicefullname is selected to be built!"
echo ""
echo "Which android repository are we building from today?"

echo "  1. Android Open Kang Project"
echo "  2. Android Open Source Project"
echo "  3. BAMF Paradigm"
echo "  4. Bugless Beast"
echo "  5. Codename Android"
echo "  6. Cyanogenmod 9"
echo "  7. Cyanogenmod 10"
echo "  8. Cyanogenmod 10.2"
echo "  9. ParanoidAndroid"
echo "  10. Rooted & Busyboxed AOSP"
echo "  11. Team Gummy"
echo "  12. Go Back"

read version

if [ ! "$version" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	repomenu
fi

if ( echo $version | grep -q [A-Za-z] ); then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	repomenu
fi

if [ $version -gt "12" ]; then
		echo ""
		echo "You did not make a proper selection, try again!"
		read -p "Press Enter to continue: " done
		repomenu
fi

if [ $version == "1" ]; then
	export SCRIPT_REPO=$(echo "aokp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "2" ]; then
	export SCRIPT_REPO=$(echo "aosp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "3" ]; then
	export SCRIPT_REPO=$(echo "bamf")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "4" ]; then
	export SCRIPT_REPO=$(echo "bugless")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "5" ]; then
	export SCRIPT_REPO=$(echo "cna")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "6" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "ics")
fi

if [ $version == "7" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "8" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "10.2")
fi

if [ $version == "9" ]; then
	export SCRIPT_REPO=$(echo "paranoid")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "10" ]; then
	export SCRIPT_REPO=$(echo "raosp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "11" ]; then
	export SCRIPT_REPO=$(echo "gummy")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "12" ]; then
	echo ""
	read -p "Returning to Build Menu, Press Enter to continue: " done
	exit 0
fi

if ( ! find $REPOS/$SCRIPT_REPO-$REPO_PLATFORM -maxdepth 1 &> /dev/null ); then
	echo ""
	echo "The selected android repository is not setup!"
	read -p "Press Enter to continue: " done
	repomenu
fi

devicecount=""

if [ $SCRIPT_REPO == "aokp" ]; then

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
while true; do
	let devicecount=$devicecount+1

	if ( echo "${scriptdevice[$devicecount]}" | grep -q "EOF" ); then
		break
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	if ( ! sed -e 's/.*aokp_//g' \
	-e 's/-userdebug//' \
	$REPOS/aokp-jb/vendor/aokp/vendorsetup.sh | grep -q "${scriptdevice[$devicecount]}" ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
done
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	
fi

if [ $SCRIPT_REPO == "aosp" ]; then

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
while true; do
	let devicecount=$devicecount+1

	if ( echo "${scriptdevice[$devicecount]}" | grep -q "EOF" ); then
		break
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	if ( ! sed -e 's/.*full_//g' \
	-e 's/-userdebug//' \
	$REPOS/aosp-jb/device/*/"${scriptdevice[$devicecount]}"/vendorsetup.sh ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
done
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	
fi

if [ $SCRIPT_REPO == "cm" ]; then

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
while true; do
	let devicecount=$devicecount+1

	if ( echo "${scriptdevice[$devicecount]}" | grep -q "EOF" ); then
		break
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	if ( ! cat $LOCAL/config/cm-master-list | grep -q "${scriptdevice[$devicecount]}" ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
done
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	
fi

if [ $SCRIPT_REPO == "raosp" ]; then

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
while true; do
	let devicecount=$devicecount+1

	if ( echo "${scriptdevice[$devicecount]}" | grep -q "EOF" ); then
		break
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	if ( ! sed -e 's/.*full_//g' \
	-e 's/-userdebug//' \
	$REPOS/raosp-jb/device/*/*/vendorsetup.sh | grep -q "${scriptdevice[$devicecount]}" ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
done
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	
fi

if [ $SCRIPT_REPO == "gummy" ]; then

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
while true; do
	let devicecount=$devicecount+1

	if ( echo "${scriptdevice[$devicecount]}" | grep -q "EOF" ); then
		break
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	if ( ! sed -e 's/.*Gummy_//g' \
	-e 's/-userdebug//' \
	$REPOS/gummy-jb/vendor/Gummy/vendorsetup.sh | grep -q "${scriptdevice[$devicecount]}" ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
done
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	
fi

clear

devicecount=""

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
while true; do
	let devicecount=$devicecount+1

	if [ $devicecount == "2" ]; then
		export SLOPPYSECONDS=true
	fi

	if ( echo "${scriptdevice[$devicecount]}" | grep -q "EOF" ); then
		export SLOPPYSECONDS=""
		break
	fi
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	export SCRIPT_DEVICE="${scriptdevice[$devicecount]}"
	buildandro
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
done
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
echo "Finished!"
exit 0
}

nexus4menu(){
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Today's Menu:"
echo " 1. Build GSM Nexus 4"
echo " 2. Go Back"
echo ""
echo "Which one would you like to do?"
read buildnexus4

if [ ! "$buildnexus4" ]; then
echo ""
echo "You did not make a proper selection, try again!"
read -p "Press Enter to continue: " done
fi

if ( echo $buildnexus4 | grep -q [A-Za-z] ); then
echo ""
echo "You did not make a proper selection, try again!"
read -p "Press Enter to continue: " done
fi

if [ $buildnexus4 -gt "2" ]; then
echo ""
echo "You did not make a proper selection, try again!"
read -p "Press Enter to continue: " done
fi

if [ $buildnexus4 == "1" ]; then
scriptdevice[1]=$(echo "mako")
scriptdevice[2]=$(echo "EOF")
devicefullname=$(echo "GSM Nexus 4")
repomenu
fi

if [ $buildnexus4 == "2" ]; then
echo ""
read -p "Press Enter to go back: " done
exit 0
fi
nexus4menu
}

gnexusmenu(){
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Today's Menu:"
echo "  1. Build Verizon Galaxy Nexus"
echo "  2. Build GSM Galaxy Nexus"
echo "  3. Build Sprint Galaxy Nexus"
echo "  4. Build all above!"
echo "  5. Go Back"
echo ""
echo "Which one would you like to do?"
read buildgnexus

if [ ! "$buildgnexus" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
fi

if ( echo $buildgnexus | grep -q [A-Za-z] ); then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
fi

if [ $buildgnexus -gt "5" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
fi

if [ $buildgnexus == "1" ]; then
	scriptdevice[1]=$(echo "toro")
	scriptdevice[2]=$(echo "EOF")
	devicefullname=$(echo "Verizon Galaxy Nexus")
	repomenu
fi

if [ $buildgnexus == "2" ]; then
	scriptdevice[1]=$(echo "maguro")
	scriptdevice[2]=$(echo "EOF")
	devicefullname=$(echo "GSM Galaxy Nexus")
	repomenu
fi

if [ $buildgnexus == "3" ]; then
	scriptdevice[1]=$(echo "toroplus")
	scriptdevice[2]=$(echo "EOF")
	devicefullname=$(echo "Sprint Galaxy Nexus")
	repomenu
fi

if [ $buildgnexus == "4" ]; then
	scriptdevice[1]=$(echo "toro")
	scriptdevice[2]=$(echo "maguro")
	scriptdevice[3]=$(echo "toroplus")
	scriptdevice[4]=$(echo "EOF")
	devicefullname=$(echo "All Galaxy Nexi")
	repomenu
fi

if [ $buildgnexus == "5" ]; then
	echo ""
	read -p "Press Enter to go back: " done
	exit 0
fi
gnexusmenu
}


