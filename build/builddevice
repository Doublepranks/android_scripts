allmenu(){
devicefullname=$(echo "All Nexus Devices")

script_device=$(echo "mako")
repomenu

script_device=$(echo "hammerhead")
sloppyseconds=true
devicecheck

script_device=$(echo "maguro")
sloppyseconds=true
devicecheck

script_device=$(echo "toroplus")
sloppyseconds=true
devicecheck

script_device=$(echo "toro")
sloppyseconds=true
devicecheck

script_device=$(echo "crespo")
sloppyseconds=true
devicecheck

script_device=$(echo "crespo4g")
sloppyseconds=true
devicecheck

script_device=$(echo "grouper")
sloppyseconds=true
devicecheck

script_device=$(echo "tilapia")
sloppyseconds=true
devicecheck

script_device=$(echo "flo")
sloppyseconds=true
devicecheck

script_device=$(echo "deb")
sloppyseconds=true
devicecheck

script_device=$(echo "manta")
sloppyseconds=true
devicecheck

script_device=$(echo "stingray")
sloppyseconds=true
devicecheck

script_device=$(echo "wingray")
sloppyseconds=true
devicecheck
}

if [ ! "$builddevicemenu" ]; then
	buildmenu
else
	$builddevicemenu
fi
