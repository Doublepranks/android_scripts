#!/bin/bash
# Written by Sean Donovan (swordrune10)

if [ ! "$INIT" ]; then
	cd $(dirname $0)
	export SCRIPT=$(echo "buildother")
	../headerfile
	exit 0
fi

menu () {
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Build other device is selected to be built!"
echo ""
echo "Which android repository are we building from today?"
echo "  1. Android Open Kang Project"
echo "  2. Android Open Source Project"
echo "  3. Codename Android"
echo "  4. Cyanogenmod 9"
echo "  5. Cyanogenmod 10"
echo "  6. Cyanogenmod 10.2"
echo "  7. Evervolv"
echo "  8. PAC-man"
echo "  9. ParanoidAndroid"
echo "  10. Rooted & Busyboxed AOSP"
echo "  11. Go Back"
read version

if [ ! "$version" ] || ( echo $version | grep -q [A-Za-z] ) || [ $version -gt "11" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	menu
fi

if [ $version == "1" ]; then
	export SCRIPT_REPO=$(echo "aokp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "2" ]; then
	export SCRIPT_REPO=$(echo "aosp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "3" ]; then
	export SCRIPT_REPO=$(echo "cna")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "4" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "ics")
fi

if [ $version == "5" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "6" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "10.2")
fi

if [ $version == "7" ]; then
	export SCRIPT_REPO=$(echo "evervolv")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "8" ]; then
	export SCRIPT_REPO=$(echo "pacman")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "9" ]; then
	export SCRIPT_REPO=$(echo "paranoid")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "10" ]; then
	export SCRIPT_REPO=$(echo "raosp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "11" ]; then
	echo ""
	read -p "Returning to Build Menu, Press Enter to continue: " done
	exit 0
fi

if ( ! find $REPOS/$SCRIPT_REPO-$REPO_PLATFORM -maxdepth 1 &> /dev/null ); then
	echo ""
	echo "The selected android repository is not setup!"
	read -p "Press Enter to continue: " done
	menu
fi

clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Please type in which device you would like to build"
echo "Type in list to see all supported devices"
echo "Type in exit to go back"
read device

if [ ! "$device" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	menu
fi

while [ $device == "list" ]; do
	if [ $SCRIPT_REPO == "aokp" ]; then
		sed -e 's/.*aokp_//g' \
		-e 's/-userdebug//' \
		$REPOS/aokp-jb/vendor/aokp/vendorsetup.sh | sed "/#.*/d" | sed "/combo.*/d" | sed "/panda.*/d" | sed "/^$/d" | less
	fi

	if [ $SCRIPT_REPO == "aosp" ]; then
		sed -e 's/.*aosp_//g' \
		-e 's/-userdebug//' \
		$REPOS/aosp-jb/device/*/*/vendorsetup.sh | sed "/#.*/d" | sed "/combo.*/d" | sed "/panda.*/d" | sed "/^$/d" | less
	fi

	if [ $SCRIPT_REPO == "cna" ]; then
		sed -e 's/.*cna_//g' \
		-e 's/-userdebug//' \
		$REPOS/cna-jb/vendor/cna/vendorsetup.sh | sed "/#.*/d" | sed "/combo.*/d" | sed "/panda.*/d" | sed "/^$/d" | less	
	fi

	if [ $SCRIPT_REPO == "cm" ] && [ $REPO_PLATFORM == "ics" ]; then
		sed -e 's/.*cm_//g' \
		$LOCAL/config/cm-master-list | sed "/#/d" | sed "/jellybean/d" | sed "/10.1/d" | sed 's/-userdebug[^@]*$//' | less
	fi

	if [ $SCRIPT_REPO == "cm" ] && [ $REPO_PLATFORM == "jb" ]; then
		sed -e 's/.*cm_//g' \
		$LOCAL/config/cm-master-list | sed "/#/d" | sed "/10.1/d" | sed 's/-userdebug[^@]*$//' | less
	fi

	if [ $SCRIPT_REPO == "cm" ] && [ $REPO_PLATFORM == "10.2" ]; then
		sed -e 's/.*cm_//g' \
		$LOCAL/config/cm-master-list | sed "/#/d" | sed 's/-userdebug[^@]*$//' | less
	fi

	if [ $SCRIPT_REPO == "evervolv" ]; then
		sed -e 's/.*ev_//g' \
		-e 's/-userdebug//' \
		$REPOS/evervolv-jb/vendor/ev/vendorsetup.sh | sed "/#.*/d" | sed "/combo.*/d" | sed "/panda.*/d" | sed "/^$/d" | less
	fi

	if [ $SCRIPT_REPO == "pacman" ]; then
		sed -e 's/.*pac_//g' \
		-e 's/-userdebug//' \
		$REPOS/pacman-jb/vendor/pac/vendorsetup.sh | sed "/#.*/d" | sed "/combo.*/d" | sed "/panda.*/d" | sed "/^$/d" | less
	fi

	if [ $SCRIPT_REPO == "paranoid" ]; then
		sed -e 's/.*pa_//g' \
		-e 's/-userdebug//' \
		$REPOS/paranoid-jb/vendor/pa/vendorsetup.sh | sed "/#.*/d" | sed "/combo.*/d" | sed "/panda.*/d" | sed "/^$/d" | less
	fi

	if [ $SCRIPT_REPO == "raosp" ]; then
		sed -e 's/.*aosp_//g' \
		-e 's/-userdebug//' \
		$REPOS/raosp-jb/device/*/*/vendorsetup.sh | sed "/#.*/d" | sed "/combo.*/d" | sed "/panda.*/d" | sed "/^$/d" | less
	fi

	clear

	echo "Swordrune10's Android Kitchen!"
	echo "=============================="
	echo "Please type in which device you would like to build"
	echo "Type in list to see all supported devices"
	echo "Type in exit to go to back"
	read device
done

if [ $device == "exit" ]; then
	read -p "Press Enter to continue: " done
	exit 0
fi

if [ $SCRIPT_REPO == "aokp" ]; then
	if ( ! sed -e 's/.*aokp_//g' \
	-e 's/-userdebug//' \
	$REPOS/aokp-jb/vendor/aokp/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "aosp" ]; then
	if ( ! sed -e 's/.*aosp_//g' \
	-e 's/-userdebug//' \
	$REPOS/aosp-jb/device/*/$device/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi	
fi

if [ $SCRIPT_REPO == "cna" ]; then
	if ( ! sed -e 's/.*cna_//g' \
	-e 's/-userdebug//' \
	$REPOS/cna-jb/vendor/cna/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi	
fi

if [ $SCRIPT_REPO == "cm" ]; then
	if ( ! cat $LOCAL/config/cm-master-list | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "evervolv" ]; then
	if ( ! sed -e 's/.*ev_//g' \
	-e 's/-userdebug//' \
	$REPOS/evervolv-jb/vendor/ev/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "pacman" ]; then
	if ( ! sed -e 's/.*pac_//g' \
	-e 's/-userdebug//' \
	$REPOS/pacman-jb/vendor/pac/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "paranoid" ]; then
	if ( ! sed -e 's/.*pa_//g' \
	-e 's/-userdebug//' \
	$REPOS/paranoid-jb/vendor/pa/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "raosp" ]; then
	if ( ! sed -e 's/.*aosp_//g' \
	-e 's/-userdebug//' \
	$REPOS/raosp-jb/device/*/$device/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

clear

export SCRIPT_DEVICE=$(echo $device)
buildandro

exit 0
}
menu
