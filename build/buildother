#!/bin/bash
# Written by Sean Donovan (swordrune10)

if [ ! "$INIT" ]; then
	cd $(dirname $0)
	export SCRIPT=$(echo "buildother")
	../headerfile
	exit 0
fi

menu () {
clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Build other device is selected to be built!"
echo ""
echo "Which android repository are we building from today?"
echo "  1. Android Open Kang Project repository"
echo "  2. Android Open Source Project repository"
echo "  3. Carbon repository"
echo "  4. Cyanogenmod 9 repository"
echo "  5. Cyanogenmod 10 repository"
echo "  6. Cyanogenmod 10.2 repository"
echo "  7. Evervolv repository"
echo "  8. omnirom repository"
echo "  9. PAC-man repository"
echo "  10. ParanoidAndroid repository"
echo "  11. Rooted & Busyboxed AOSP repository"
echo "  12. Go Back"
read version

if [ ! "$version" ] || ( echo $version | grep -q [A-Za-z] ) || [ $version -gt "12" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	menu
fi

if [ $version == "1" ]; then
	export SCRIPT_REPO=$(echo "aokp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "2" ]; then
	export SCRIPT_REPO=$(echo "aosp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "3" ]; then
	export SCRIPT_REPO=$(echo "carbon")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "4" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "ics")
fi

if [ $version == "5" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "6" ]; then
	export SCRIPT_REPO=$(echo "cm")
	export REPO_PLATFORM=$(echo "10.2")
fi

if [ $version == "7" ]; then
	export SCRIPT_REPO=$(echo "evervolv")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "8" ]; then
	export SCRIPT_REPO=$(echo "omni")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "9" ]; then
	export SCRIPT_REPO=$(echo "pacman")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "10" ]; then
	export SCRIPT_REPO=$(echo "paranoid")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "11" ]; then
	export SCRIPT_REPO=$(echo "raosp")
	export REPO_PLATFORM=$(echo "jb")
fi

if [ $version == "12" ]; then
	echo ""
	read -p "Returning to Build Menu, Press Enter to continue: " done
	exit 0
fi

if ( ! find $REPOS/$SCRIPT_REPO-$REPO_PLATFORM -maxdepth 1 &> /dev/null ); then
	echo ""
	echo "The selected android repository is not setup!"
	read -p "Press Enter to continue: " done
	menu
fi

clear

echo "Swordrune10's Android Kitchen!"
echo "=============================="
echo "Please type in which device you would like to build"
echo "Type in list to see all supported devices"
echo "Type in exit to go back"
read device

if [ ! "$device" ]; then
	echo ""
	echo "You did not make a proper selection, try again!"
	read -p "Press Enter to continue: " done
	menu
fi

while [ $device == "list" ]; do
	clear

	echo "Device List"
	echo "==========="

	if [ $SCRIPT_REPO == "aokp" ]; then
		cat $REPOS/aokp-jb/vendor/aokp/vendorsetup.sh | grep "add_lunch_combo" | \
		sed 's/.*aokp_//' | sed 's/-userdebug//' | sed "/combo.*/d"
	fi

	if [ $SCRIPT_REPO == "aosp" ]; then
		for vendorsetup in `ls $REPOS/aosp-jb/device/*/*/vendorsetup.sh 2> /dev/null`
		do
			cat $vendorsetup | grep "add_lunch_combo" | sed 's/.*aosp_//' | \
			sed 's/-userdebug//' | sed 's/.*full_//' | sed "/combo.*/d"
		done
	fi

	if [ $SCRIPT_REPO == "carbon" ]; then
		cat $REPOS/carbon-jb/vendor/carbon/vendorsetup.sh | grep "add_lunch_combo" | \
		sed 's/.*carbon_//' | sed 's/-userdebug//' | sed "/combo.*/d"	
	fi

	if [ $SCRIPT_REPO == "cm" ] && [ $REPO_PLATFORM == "ics" ]; then
		cat $LOCAL/config/cm-master-list | grep "ics" | sed "s/cm_//" | sed "/#/d" | \
		sed "/^$/d" | sed 's/-userdebug//' | sed "s/ics.*//"
	fi

	if [ $SCRIPT_REPO == "cm" ] && [ $REPO_PLATFORM == "jb" ]; then
		cat $LOCAL/config/cm-master-list | grep "jellybean" | sed "s/cm_//" | \
		sed "/#/d" | sed "/^$/d" | sed 's/-userdebug//' | sed "s/jellybean.*//"
	fi

	if [ $SCRIPT_REPO == "cm" ] && [ $REPO_PLATFORM == "10.2" ]; then
		cat $LOCAL/config/cm-master-list | grep "10.2" | sed "s/cm_//" | \
		sed "/#/d" | sed "/^$/d" | sed 's/-userdebug//' | sed "s/cm-10.2.*//"
	fi

	if [ $SCRIPT_REPO == "evervolv" ]; then
		cat $REPOS/evervolv-jb/vendor/ev/vendorsetup.sh | grep "add_lunch_combo" | \
		sed 's/.*ev_//' | sed 's/-eng//' | sed "/combo.*/d"
	fi

	if [ $SCRIPT_REPO == "omni" ]; then
		for vendorsetup in `ls $REPOS/omni-jb/device/*/*/vendorsetup.sh 2> /dev/null`
		do
			cat $vendorsetup | grep "add_lunch_combo" | sed 's/.*custom_//' | \
			sed 's/-userdebug//' | sed 's/.*full_//' | sed "/combo.*/d"
		done
	fi

	if [ $SCRIPT_REPO == "pacman" ]; then
		cat $REPOS/pacman-jb/vendor/pac/vendorsetup.sh | grep "add_lunch_combo" | \
		sed 's/.*pac_//' | sed 's/-userdebug//' | sed "/combo.*/d"
	fi

	if [ $SCRIPT_REPO == "paranoid" ]; then
		cat $REPOS/paranoid-jb/vendor/pa/vendorsetup.sh | grep "add_lunch_combo" | \
		sed 's/.*pa_//' | sed 's/-userdebug//' | sed "/combo.*/d"
	fi

	if [ $SCRIPT_REPO == "raosp" ]; then
		for vendorsetup in `ls $REPOS/raosp-jb/device/*/*/vendorsetup.sh 2> /dev/null`
		do
			cat $vendorsetup | grep "add_lunch_combo" | sed 's/.*aosp_//' | \
			sed 's/-userdebug//' | sed 's/.*full_//' | sed "/combo.*/d"
		done
	fi

	echo ""

	echo "Swordrune10's Android Kitchen!"
	echo "=============================="
	echo "Please type in which device you would like to build"
	echo "Type in list to see all supported devices"
	echo "Type in exit to go to back"
	read device
done

if [ $device == "exit" ]; then
	read -p "Press Enter to continue: " done
	exit 0
fi

if [ $SCRIPT_REPO == "aokp" ]; then
	if ( ! sed -e 's/.*aokp_//g' \
	-e 's/-userdebug//' \
	$REPOS/aokp-jb/vendor/aokp/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "aosp" ]; then
	if ( ! sed -e 's/.*aosp_//g' \
	-e 's/-userdebug//' \
	$REPOS/aosp-jb/device/*/$device/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi	
fi

if [ $SCRIPT_REPO == "carbon" ]; then
	if ( ! sed -e 's/.*carbon_//g' \
	-e 's/-userdebug//' \
	$REPOS/carbon-jb/vendor/carbon/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi	
fi

if [ $SCRIPT_REPO == "cm" ]; then
	if ( ! cat $LOCAL/config/cm-master-list | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "evervolv" ]; then
	if ( ! sed -e 's/.*ev_//g' \
	-e 's/-userdebug//' \
	$REPOS/evervolv-jb/vendor/ev/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "omni" ]; then
	if ( ! sed -e 's/.*custom_//g' \
	-e 's/-userdebug//' \
	$REPOS/omni-jb/device/*/$SCRIPT_DEVICE/vendorsetup.sh | grep -q $SCRIPT_DEVICE ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi	
fi

if [ $SCRIPT_REPO == "pacman" ]; then
	if ( ! sed -e 's/.*pac_//g' \
	-e 's/-userdebug//' \
	$REPOS/pacman-jb/vendor/pac/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "paranoid" ]; then
	if ( ! sed -e 's/.*pa_//g' \
	-e 's/-userdebug//' \
	$REPOS/paranoid-jb/vendor/pa/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

if [ $SCRIPT_REPO == "raosp" ]; then
	if ( ! sed -e 's/.*aosp_//g' \
	-e 's/-userdebug//' \
	$REPOS/raosp-jb/device/*/$device/vendorsetup.sh | grep -q $device ); then
		echo ""
		echo "This device is not compatible with this repository, try again!"
		read -p "Returning to Build Menu, Press Enter to continue: " done
		exit 0
	fi
fi

clear

export SCRIPT_DEVICE=$(echo $device)
buildandro

exit 0
}
menu
