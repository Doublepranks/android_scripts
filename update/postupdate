#!/bin/bash
# Written by Sean Donovan (swordrune10)
if [ $SCRIPT_REPO == "cm" ]; then
	cd $REPOS/cm-$REPO_PLATFORM/vendor/cm
	./get-prebuilts

	#this is rebuilt every time since this file is likely to change alot
	curl https://raw.github.com/CyanogenMod/hudson/master/cm-build-targets > $LOCAL/config/cm-master-list

	if [ $REPO_PLATFORM == "11" ]; then
		cd $REPOS/cm-11/kernel/samsung/tuna

		git revert 30380fcc456d8c3911857ad12e3ad45952fce492
		git revert c57c15503c3a3222e26d874c7866c06750d901e3
		git revert 943b70f35055d0e9c33015d9334b4b3c85812a45

		mv arch/arm/configs/fancykernel_big_tuna_defconfig arch/arm/configs/cyanogenmod_tuna_defconfig
	fi
fi

if [ $SCRIPT_REPO == "pacman" ]; then
	cd $REPOS/pacman-$REPO_PLATFORM/vendor/cm
	./get-prebuilts
fi
